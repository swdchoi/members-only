<div class="container mt-5">
<div class="row justify-content-center">
<div class="col-md-6">
<div class="card text-center p-3">
<div class="card-header">
<h1 class="h3 mb-3 font-weight-normal">Log in</h1>
</div>
<%= form_for(resource, as: resource_name, :html => {:class => 'form-signin'}, url: session_path(resource_name)) do |f| %>
  <br />
  <div class="field mb-3 text-start">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control"%>
  </div>

  <div class="field mb-3 text-start">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox mb-3 text-start">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions text-start">
    <%= f.submit "Log in" , class:"btn btn-primary btn-block m-2"%> | <%= render "devise/shared/links" %>

  </div>
<% end %>

</div>
</div>
</div>
</div>
